{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "api": ["src/api"],
      "api/*": ["src/api/*"],
      "assets": ["src/assets"],
      "assets/*": ["src/assets/*"],
      "components": ["src/components"],
      "components/*": ["src/components/*"],
      "app:constants": ["src/constants"],
      "app:constants/*": ["src/constants/*"],
      "hooks": ["src/hooks"],
      "hooks/*": ["src/hooks/*"],
      "icons": ["src/icons"],
      "icons/*": ["src/icons/*"],
      "interfaces": ["src/interfaces"],
      "interfaces/*": ["src/interfaces/*"],
      "layouts": ["src/layouts"],
      "layouts/*": ["src/layouts/*"],
      "modules": ["src/modules"],
      "modules/*": ["src/modules/*"],
      "pages": ["src/pages"],
      "pages/*": ["src/pages/*"],
      "routes": ["src/routes"],
      "routes/*": ["src/routes/*"],
      "services": ["src/services"],
      "services/*": ["src/services/*"],
      "utils": ["src/utils"],
      "utils/*": ["src/utils/*"],
      "styles/*": ["src/styles/*"]
    }
  },
  "include": ["src", ".eslintrc.cjs"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
